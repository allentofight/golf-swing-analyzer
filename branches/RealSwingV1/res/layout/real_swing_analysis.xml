<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:orientation="vertical" >
    
	<LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
    	<Spinner
	        android:id="@+id/real_swing_file_spinner"
	        android:layout_width="230dp"
	        android:layout_height="fill_parent" 
	        android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/real_swing_home_button"
            android:layout_width="60dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:background="#000000"
            android:src="@drawable/home_icon"/>
	</LinearLayout>    
    
    
    
    <TextView
       	android:id="@+id/realswing_x_textview"
       	android:layout_width="fill_parent"
       	android:layout_height="30dp"
       	android:text="X-axis" 
       	android:textColor="#ffffff"/>    
    
    <!-- X-axis ruler -->
    <LinearLayout
	   	android:id="@+id/timescale_x"
	   	android:layout_width="fill_parent"
	   	android:layout_height="40dp"	   
	   	android:orientation="vertical"/>
    
    <!-- X axis Image buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_x1"
            android:layout_width="20dp"
            android:layout_height="20dp"    
            android:layout_weight="1"        
            android:background="#00000000"      
            android:gravity="center"            
            android:src="@drawable/black_button_30"/>

        <ImageView
            android:id="@+id/img_x2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"            
            android:src="@drawable/black_button_30"/>

        <ImageView
            android:id="@+id/img_x3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/black_button_30"/>

        <ImageView
            android:id="@+id/img_x4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/black_button_30"/>

        <ImageView
            android:id="@+id/img_x5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/black_button_30"/>

        <ImageView
            android:id="@+id/img_x6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/black_button_30"/>

		<ImageView
            android:id="@+id/img_x7"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/black_button_30"/>

		<ImageView
            android:id="@+id/img_x8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/black_button_30"/>
		
		<ImageView
            android:id="@+id/img_x9"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/black_button_30"/>

		<ImageView
            android:id="@+id/img_x10"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/black_button_30"/>		
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#FFFFFF"
        android:orientation="vertical" >
    </LinearLayout>

     <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="5dp"    
        android:orientation="vertical" >
    </LinearLayout>
    
 	<!-- Y axis Image buttons -->    
	<LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:orientation="vertical" > 
    	<TextView
        	android:id="@+id/realswing_y_textview"
        	android:layout_width="fill_parent"
        	android:layout_height="fill_parent"
        	android:text="Y-axis" 
        	android:textColor="#ffffff"/>
	</LinearLayout>
	
	
	<LinearLayout
	   	android:id="@+id/timescale_y"
	   	android:layout_width="fill_parent"
	   	android:layout_height="40dp"	   
	   	android:orientation="vertical" />
	
    <!-- Y axis Image buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_y1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/black_button_30"/>

        <ImageView
            android:id="@+id/img_y2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/black_button_30"/>

        <ImageView
            android:id="@+id/img_y3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/black_button_30"/>

        <ImageView
            android:id="@+id/img_y4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/black_button_30"/>

        <ImageView
            android:id="@+id/img_y5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/black_button_30"/>

        <ImageView
            android:id="@+id/img_y6"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/black_button_30"/>
        <ImageView
            android:id="@+id/img_y7"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/black_button_30"/>
        <ImageView
            android:id="@+id/img_y8"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/black_button_30"/>
        <ImageView
            android:id="@+id/img_y9"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/black_button_30"/>
        <ImageView
            android:id="@+id/img_y10"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:gravity="center"
            android:src="@drawable/black_button_30"/>        
    </LinearLayout>
    
    <LinearLayout
       	android:layout_width="fill_parent"
       	android:layout_height="0.5dp"
       	android:background="#FFFFFF"
       	android:orientation="vertical" >
	</LinearLayout>
    
	<ScrollView
        android:layout_width="fill_parent"
        android:layout_height="100dp" >        
    	<LinearLayout
	        android:id="@+id/layer_result"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"        
	        android:orientation="vertical" >
	        <TextView
	            android:id="@+id/realswing_result"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:text="Result" />
	    </LinearLayout>
	</ScrollView>
	
	<LinearLayout
        android:id="@+id/layer_button"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >
		<CheckBox 
            android:id="@+id/real_swing_check_gravity"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="Remove gravity(Y)"
            android:textAppearance="?android:attr/textAppearanceSmall" />        
        <Button
            android:id="@+id/real_swing_analysis_button"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Analyze"
            android:textAppearance="?android:attr/textAppearanceMedium" />
        
    </LinearLayout>
</LinearLayout>