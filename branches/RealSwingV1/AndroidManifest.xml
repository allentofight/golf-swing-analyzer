<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.SwingAnalyzer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.INTERNET" />
	
    <application
        android:icon="@drawable/golf_analyzer_icon"
        android:label="@string/app_name" >
        <activity
            android:name=".Home"
            android:label="@string/app_name" android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RealSwingAnalysisActivity" android:label="External Golf Swing Data"
            android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden">            
        </activity>
        
        <activity android:name=".SwingFeedback" android:label="Golf Swing Analyzer"
            android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden">            
        </activity>
        
        <activity android:name=".SwingPastDataFeedback" android:label="Past Golf Swing Data"
            android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden">            
        </activity>
        
        <activity android:name=".SwingGraphActivity" android:label="Swing Database Graph"
            android:windowSoftInputMode="stateHidden">            
        </activity>
        
        <activity android:name=".StatisticsActivity" android:label="Statistics"
            android:windowSoftInputMode="stateHidden">
        </activity>
        
        <activity android:name=".SettingsActivity" android:label="Settings"
            android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden">
        </activity>
        
        <activity android:name=".FileManagerActivity" android:label="File Manager"
            android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden">            
        </activity>
        
        <activity android:name="org.achartengine.GraphicalActivity" />
    </application>

</manifest>