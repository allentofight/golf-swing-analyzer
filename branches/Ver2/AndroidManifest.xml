<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.SwingAnalyzer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	
    <application
        android:icon="@drawable/golf_analyzer_icon"
        android:label="@string/app_name" >
        <activity
            android:name=".CollectingAccelerationData"
            android:label="@string/app_name" android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".DetectingPointActivity" android:label="Detecting points"
            android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden">            
        </activity>
        
        
        <activity android:name=".SwingFeedback" android:label="Swing Analysis"
            android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden">            
        </activity>
        
        <activity android:name=".StatisticsActivity" android:label="Statistics"
            android:screenOrientation="portrait" android:windowSoftInputMode="stateHidden">
        </activity>
    </application>

</manifest>