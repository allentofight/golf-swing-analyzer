<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:text="Golf swing analyzer" 
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <Spinner
        android:id="@+id/outfile_spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    
    <!-- Separater -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="5dp"
        android:background="#000000"
        android:orientation="vertical" >
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >       

        <Button
            android:id="@+id/x_analysis_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="X-axis analysis" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <Button
            android:id="@+id/y_analysis_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Y-axis analysis" 
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </LinearLayout>
    
    <!-- Separater -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#FFFFFF"
        android:orientation="vertical" >
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:orientation="vertical" >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Threshold"
            android:gravity="left"
            android:textAppearance="?android:attr/textAppearanceSmall">            
        </TextView>
    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >
    	<TextView
    	    android:layout_width="50dp"
    	    android:layout_height="fill_parent"
    	    android:layout_weight="0.91"
    	    android:text="MAX" 
    	    android:textAppearance="?android:attr/textAppearanceSmall"
    	    android:gravity="center|center_horizontal">    	    
    	</TextView>
        <EditText
            android:id="@+id/threshold_hi_edit"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">            
        </EditText>
		<TextView
    	    android:layout_width="50dp"
    	    android:layout_height="fill_parent"
    	    android:layout_weight="0.91"
    	    android:text="MIN" 
    	    android:gravity="center|center_horizontal"
    	    android:textAppearance="?android:attr/textAppearanceSmall">    	    
    	</TextView>
        <EditText
            android:id="@+id/threshold_low_edit"
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:layout_weight="1" >

            <requestFocus />
        </EditText>

    </LinearLayout>	
    <!-- Separater -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#FFFFFF"
        android:orientation="vertical" >
    </LinearLayout>
    <TextView
        android:id="@+id/detect_impact_title"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:text="Impact point" />
    
    <!-- Separater -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="#FFFFFF"
        android:orientation="vertical" >
    </LinearLayout>

    <ScrollView
       	android:layout_width="fill_parent"
       	android:layout_height="200dp">
      
      <LinearLayout
    	android:orientation="vertical"
    	android:layout_width="fill_parent"
    	android:layout_height="200dp">
        
    <TextView
        android:id="@+id/detect_impactpoint_text"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"        
        android:text="" 
        android:textAppearance="?android:attr/textAppearanceSmall"/>
    </LinearLayout>
	</ScrollView>
</LinearLayout>